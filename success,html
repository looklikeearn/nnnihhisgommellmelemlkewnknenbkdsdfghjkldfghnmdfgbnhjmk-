<script>
    // Get the RegNo from sessionStorage (it was saved in the previous page)
    const regNo = sessionStorage.getItem('regNo');
    
    if (regNo) {
        // Display the success message
        document.getElementById('message').innerText = `Your video has been uploaded successfully! Your registration number is: ${regNo}`;
    } else {
        // In case there's no regNo (fallback error message)
        document.getElementById('message').innerText = 'Thank You and Earn Now, (Important: tags and description is important)';
    }
</script>

